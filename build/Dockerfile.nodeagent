
ARG BASE_IMAGE=gcr.io/distroless/static:nonroot

# Source for the lscpu binary - TARGETPLATFORM architecture
FROM quay.io/projectquay/golang:1.23 AS lscpu-source

# Build the manager binary
# Builder stage runs on the TARGETPLATFORM architecture (set by --platform).
# This ensures the container's toolchain/headers match the target arch so CGO
# and native deps compile and link correctly.
FROM golang:1.23 AS builder
ARG TARGETOS \
    TARGETARCH

WORKDIR /workspace
# Copy the Go Modules manifests
COPY go.mod go.mod
COPY go.sum go.sum
# Bring in the go dependencies before anything else so we can take
# advantage of caching these layers in future builds.
COPY vendor/ vendor/
# Copy the go source
COPY build/nodeagent/main.go main.go
COPY api/ api/
COPY controllers/ controllers/
COPY pkg/ pkg/
COPY internal/ internal/
COPY e-sms/ e-sms/

# Build
RUN mkdir -p /install_root/etc && groupadd -g 1099 "kpm" && useradd -g "kpm" -u 10001 -s /sbin/nologin power-node-agent && tail -1 /etc/passwd > /install_root/etc/passwd
RUN if [ "$TARGETARCH" = "amd64" ]; then \
      CGO_ENABLED=1 GOOS=${TARGETOS:-linux} GOARCH=$TARGETARCH GO111MODULE=on go build --mod=vendor -a -o /install_root/nodeagent ./main.go; \
    else \
      CGO_ENABLED=0 GOOS=${TARGETOS:-linux} GOARCH=$TARGETARCH GO111MODULE=on go build --mod=vendor -a -o /install_root/nodeagent ./main.go; \
    fi

FROM ${BASE_IMAGE} AS runtime
ARG TARGETARCH
WORKDIR /
COPY LICENSE /licenses/LICENSE
COPY --from=builder /install_root .
COPY --from=lscpu-source /usr/bin/lscpu /usr/bin/lscpu
COPY e-sms/e_smi/lib/ /opt/e-sms/lib
ENV LD_LIBRARY_PATH=/opt/e-sms/lib

USER 10001
ENTRYPOINT ["/nodeagent"]